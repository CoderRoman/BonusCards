{% extends '@App/base.html.twig' %}


{% block content %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form name="author" method="post" action="{{ path('generate') }}">
                <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Генерация карт</h3>
                        </div>
                        <div class="box-body">
                          <div class="form-group">
                              <label class="control-label">Серия</label>
                              <input  type='number' name="form[number]" class="form-control" required />
                          </div>
                            <div class="form-group">
                                <label class="control-label">Начальная сумма</label>
                                <input  type='number' name="form[amount]" class="form-control" required />
                            </div>
                          <div class="form-group">
                              <label class="control-label">Количество</label>
                              <input  type='number'  min="1" max="100000" name="form[total]" class="form-control" required/>
                          </div>
                            <div class="form-group">
                                <label class="control-label">Срок</label>
                                    <select name="form[months]" class="form-control">
                                      <option value="1">1 месяц</option>
                                      <option value="6">6 месяцев</option>
                                      <option value="12">12 месяцев</option>
                                    </select>
                            </div>


                        </div>
                </div>
                <div class="box-footer">
                   <div  class="form-group right-buttons">
                            <button id="mf-btn-save" class="btn btn-primary" type="submit">
                                <i class="fa fa-save"></i> Сохранить</button>
                   </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>


{% endblock %}



{% block stylesheets %}



{% endblock %}
